<div class="container bg-light mb-5 mt-5 shadow-lg w-50  rounded">
    <h1 class="text-center text-warning mb-5">Signup</h1>
    <center>
        <form method="post">

            <input type="text" name="username" placeholder="Enter Name" class="form-control shadow-sm w-50 mb-3 rounded-pill" />
            <input type="email" name="email" placeholder="Enter Email" class="form-control shadow-sm w-50 mb-4 rounded-pill" />
            <input type="tel" name="contact" placeholder="Enter Contact" class="form-control shadow-sm w-50 mb-4 rounded-pill" />
            <input type="password" name="password" placeholder="Enter password" class="form-control shadow-sm  w-50 mb-4 rounded-pill" />
            <input type="submit" value="Signup" class="w-50 text-light  btn btn-warning mb-4 rounded-pill" />
            
            <h6 class="text-secondary"> Already member?
                <a class="nav-link text-primary" asp-controller="Home" asp-action="Login">Login</a>
            </h6>
                  
        </form>

    </center>
</div>

