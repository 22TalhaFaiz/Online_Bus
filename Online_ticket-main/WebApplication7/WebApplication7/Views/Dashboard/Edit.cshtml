@{
    ViewData["Title"] = "Data Update";
}

<div class="container bg-light mb-5 mt-5 shadow-lg w-50 rounded">
    <h1 class="text-center text-danger mb-5">@ViewData["Title"]</h1>
    <center>
        <form asp-action="Edit" method="post">
          @*   @if (ViewData["LoginError"] != null)
            {
                <div class="alert alert-danger">
                    @ViewData["LoginError"]
                </div>
            } *@
            <input type="text" name="username" placeholder="Enter Name" class="form-control shadow-sm w-50 mb-5 rounded-pill" required />
            <input type="email" name="email" placeholder="Enter Email" class="form-control shadow-sm w-50 mb-5 rounded-pill" required />
            <input type="tel" name="contact" placeholder="Enter Contact" class="form-control shadow-sm w-50 mb-5 rounded-pill" required />
            <input type="password" name="password" placeholder="Enter Password" class="form-control shadow-sm w-50 mb-5 rounded-pill" required />
       
            <input type="submit" value="Update" class="w-50 text-light btn btn-danger mb-5 rounded-pill" />
        </form>
    </center>
</div>
