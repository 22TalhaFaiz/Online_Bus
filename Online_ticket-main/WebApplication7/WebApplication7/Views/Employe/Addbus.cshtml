<div class="container bg-light mb-5 mt-5 shadow-lg w-50  rounded">
    <h1 class="text-center text-dark mb-5">Add <span class="text-danger">Buses</span></h1>
    <center>
        <form method="post"  action="Addbus" enctype="multipart/form-data" >

            <input type="text" name="bus_number" placeholder="Enter bus number" class="form-control shadow-sm w-50 mb-4 rounded-pill" />
            <input type="number" name="capacity" placeholder="select capacity" class="form-control shadow-sm w-50 mb-4 rounded-pill" />
            <input type="text" name="model" placeholder="Enter model" class="form-control shadow-sm  w-50 mb-4 rounded-pill" />
            <input type="text" name="operator" placeholder="Enter operator" class="form-control shadow-sm  w-50 mb-4 rounded-pill" />
            <input type="file" class="form-control w-50" multiple name="bus_image" />
            <input type="submit" value="Add" class="w-50 text-light  btn btn-danger mb-4 rounded-pill" />

            

        </form>

    </center>
</div>

